.container
  .article
    .article_nav
      = image_tag 'article-avatar.png', class: 'article_nav_avatar'
      .article_nav_text
        .article_nav_text_name
          %p= current_user.user_name
        .article_nav_text_time
          %p 3 hours ago
    .article_content
      - article.images.each do |images| 
        = image_tag images, class: 'article_content_image'
    .article_action
      = image_tag 'heart-active.png', class: 'article_icon'
      = image_tag 'comment.png', class: 'article_icon'
      = image_tag 'share.png', class: 'article_icon'
    .article_liked
      %p Jasmine and 12000 other liked your post
    .article_text
      .article_user_name
        %p= current_user.user_name
      .article_text_content
        %p= article.content