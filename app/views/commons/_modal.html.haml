- if user_signed_in?
  = image_tag current_user.avatar_image, class: 'header_right modalbtn', id: 'openModal'
  %section#modalArea.modalArea
    #modalBg.modalBg
      .modalWrapper
        .modalContents
          %h2= link_to 'Profile', profile_path
          %h2= link_to 'Timeline', timelines_path
          %h2= link_to 'Favorites', favorites_path
          %h2= link_to 'Logout', destroy_user_session_path, data: { method: 'delete' }

        #closeModal.closeModal
          ×
- else
  = link_to 'ログイン', new_user_session_path, class: 'loginBtn'